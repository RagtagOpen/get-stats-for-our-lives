{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["es2017"],
    "baseUrl": "./",
    "rootDir": "./",
    "outDir": "../dist",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "types": ["node", "mocha"]
  },
  "include": [
    "**/*"
  ]
}