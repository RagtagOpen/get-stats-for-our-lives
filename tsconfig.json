{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["es2017", "dom"],
    "baseUrl": "./src",
    "rootDir": "./src",
    "outDir": "dist",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types",
  ]//    "types": ["node", "mocha"]
  },
  "include": [
    "src/**/*",
  ]
}
